  <view class="weui-cell__bd">
    <view class="weui-label" name="address">详细地址</view>
  </view>
  <view class="weui-cell__ft"><input class="weui-input" placeholder="{{PuKaBasic.healthy.address}}" bindinput='getAddress'/></view>
