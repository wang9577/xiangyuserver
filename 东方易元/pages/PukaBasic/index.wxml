<view class="weui-cell weui-cell_input">
  <view class="weui-cell__bd">
    <view class="weui-label" name = "sex">性别</view>
  </view>
  <view class="weui-cell__ft" >
   <input class="weui-input" placeholder="{{PuKaBasic.user.sex == 0?'男':'女'}}" bindinput='getSex'/>
  </view>
</view>
<view class="weui-cell weui-cell_input">
  <view class="weui-cell__bd">
    <view class="weui-label" name="birthDate">出生日期</view>
  </view>
  <view class="weui-cell__ft" >
  <input class="weui-input" placeholder="{{PuKaBasic.healthy.birthDate}}" bindinput='getBirthDate'/>
  </view>
</view>
<view class="weui-cell weui-cell_input">
  <view class="weui-cell__bd">
    <view class="weui-label" name = "ID">身份证号</view>
  </view>
  <view class="weui-cell__ft"><input class="weui-input" placeholder="{{PuKaBasic.healthy.certificates}}" bindinput='getID'/></view>
</view>
