.weui-grids {
	overflow: hidden
}
.weui-grids04 .weui-grid{ width: 100%; padding: 10px 0}
.weui-grids03 .weui-grid{ width: 50%; padding: 10px}
.weui-grids03 .weui-grid:nth-child(odd) { padding-left: 0}
.weui-grid {
	position: relative;
	float: left;
	padding: 20px 10px;
	width: 25%;
	box-sizing: border-box;
}
.weui-grids04 .weui-grid__icon{ width: 706rpx; height: 394rpx; border-radius: 6rpx; overflow: hidden;}
.weui-grids03 .weui-grid__icon{ width: 346rpx; height: 232rpx; border-radius: 6rpx; overflow: hidden;}
.weui-grids03 .weui-grid:nth-child(even) { margin-left: -8rpx;}
.weui-grid__icon {
	display: block;
	width: 45px;
	height: 45px;
	margin: 0 auto
}
.weui-grids03 .weui-grid__label,.weui-grids04 .weui-grid__label{ text-align: left}
.weui-grid__label {
	margin-top: 9px;
	display: block;
	text-align: center;
	color: #333;
	font-size: 14px;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden
}

.warp{ width: 100%; box-sizing: border-box; padding: 0 3%;}
.weui-cell_access {
	color: inherit
}
.weui-cell02 .weui-cell__ft_in-access:after {
	content: " ";
	display: inline-block;
	height: 6px;
	width: 6px;
	border-width: 2px 2px 0 0;
	border-color: #a3a1a1;
	border-style: solid;
	-webkit-transform: matrix(.71, .71, -.71, .71, 0, 0);
	transform: matrix(.71, .71, -.71, .71, 0, 0);
	position: absolute;
	top: 50%;
	margin-top: -4px;
	left: 21%;
}
.weui-cell_link {
	color: #586c94;
	font-size: 14px
}
.weui-cell_link:first-child:before {
	display: block
}
.weui-cell02 .weui-cell__bd{ font-size: 17px; color: #333; font-weight: 600;}
.weui-cell01 .weui-cell__bd{ font-size: 15px; color: #333;}
/* CSS Document */
.weui-cells {
	position: relative;
	margin-top: 1.17647059em;
	background-color: #fff;
	line-height: 1.41176471;
	font-size: 16px
}
.weui-cell {
	padding: 10px 15px;
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	align-items: center;
}
.weui-cell01{ border-bottom: 1rpx solid #eee; padding:16px 0;}
.weui-cell02{ padding: 10px 0;}
.weui-cell:before {
	content: " ";
	position: absolute;
	left: 0;
	top: 0;
	right: 0;
	height: 1px;
	border-top: 0rpx solid #eee;
	color: #d9d9d9;
}
.weui-cell:first-child:before {
	display: none
}
.weui-cell_active {
	background-color: #ececec
}
.weui-cell_primary {
	-webkit-box-align: start;
	-webkit-align-items: flex-start;
	align-items: flex-start
}
.weui-cell__bd {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	flex: 1
}
.weui-cell__ft {
	text-align: right;
	color: #999
}
.time01{ font-size: 13px;color: #888; position: absolute; bottom: 26rpx;}
.title01,.adders{ float: left; width: 100%; margin-top:0;}
.weui-cell__bd01{ height: 140rpx;}
.weui-cell__bd02{ height: 180rpx;}
.time02{ font-size: 14px;color: #888; margin-top: 10rpx; float: left; width: 100%;}
