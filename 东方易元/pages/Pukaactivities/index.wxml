    <view class='adders'>
      <view class='adders_left'>
        <image class='pic' src='../images/position.png'></image>
        <text class='words'>{{myActivity.city}}</text>
        <image class='pic01' src='../images/piuc001_10.jpg'></image>
        <text class='words'>{{myActivity.activity_time}}</text>
      </view>
      <text class='adders_right'>{{myActivity.enrollNum}}人报名</text>
    </view>
