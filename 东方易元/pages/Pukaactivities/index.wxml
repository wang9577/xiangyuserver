<view  wx:for="{{myActivity}}" wx:for-item="myActivity" class="weui-grids04 weui-grids">
  <navigator url="" class="weui-grid" hover-class="weui-grid_active">
    <image class="weui-grid__icon" src="../images/pic02_07.jpg" />
