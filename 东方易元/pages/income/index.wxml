<!--pages/income/index.wxml-->
<view class='My'>
  <image class='my_pic01' src='{{userDetails.avatarUrl}}'></image>
  <view class='you'>
    <text class='name02'>{{userDetails.username}}</text>
    <text class='name03' wx:if="{{userDetails.grade === 1}}">普卡会员</text>
    <text class='name03' wx:if="{{userDetails.grade === 2}}">金卡会员</text>
    <text class='name03' wx:if="{{userDetails.grade === 3}}">白金卡会员</text>
    <text class='name03' wx:if="{{userDetails.grade === 4}}">铂金卡会员</text>
    <text class='name03' wx:if="{{userDetails.grade === 5}}">黑金卡会员</text>
  </view>
</view>
<view class='Stud'>
  <!--index.wxml-->
  <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">课程</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">客户收益</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">健康档案</view>
  </view>
  <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
    <!-- 我是课程 -->
    <swiper-item>
      <view class='curri' wx:for="{{userCurriculum}}" wx:for-item="userCu">
        <view class='curri01'>
          <image class='curri_pic' src='../images/red.png'></image>
          <text class='curri_zt' wx:if="{{userCu.type === '1'}}">待学习</text>
          <text class='curri_zt' wx:if="{{userCu.type === '2'}}">进行中</text>
          <text class='curri_zt' wx:if="{{userCu.type === '3'}}">已完成</text>
          <text class='curri_zt01'>{{userCu.curriculum_name}}</text>
        </view>
        <view class='curri02'>
          <text class='curri_left'>开始时间：</text>
          <text class='curri_right'>{{userCu.start_time}}</text>
        </view>
        <view class='curri02'>
          <text class='curri_left'>完成时间：</text>
          <text class='curri_right'>{{userCu.end_time}}</text>
        </view>
        <view class='curri02'>
          <text class='curri_left'>我的教练：</text>
          <text class='curri_right'>{{userCu.name}}</text>
        </view>
      </view>
    </swiper-item>
    <!-- 我是客户收益 -->
    <swiper-item>
      <view class='Profit'>
        <text class='Profit_left'>累计收益（元）</text>
        <text class='Profit_right'>{{numbers}}</text>
      </view>

      <view class='Tutor03'>收益明细</view>

      <view wx:for="{{userIncome}}" wx:for-item="userIn">
      <view class='Tutor04'>
        <image class='Tutor_pic' src='{{userIn.avatarUrl}}'></image>
        <view class='Tutor05'>
          <view class='Tutor07'>{{userIn.username}}
            <text class='indi' wx:if="{{userIn.recommend_status === 0}}">直接介绍</text>
            <text class='indi' wx:if="{{userIn.recommend_status === 1}}">间接介绍</text>
          </view>
          <text class='Tutor08'>{{userIn.create_time}}</text>
        </view>
        <view class='Tutor06'>
          <text class='Tutor07'>{{userIn.extract_money}}</text>
          <text class='Tutor08_ts Tutor08' wx:if="{{userIn.status === 0}}">未结算</text>
          <text class='Tutor08_ts Tutor08' wx:if="{{userIn.status === 1}}">已结算</text>
        </view>
      </view>
      </view>
    </swiper-item>
    <!-- 我是健康档案 -->
    <swiper-item>
      <navigator url='../Basic/index?id={{id}}' class="weui-cell weui-cell_access">
        <view class="weui-cell__bd">基本情况</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
      <navigator url='../Health/index?id={{userDetails.id}}' class="weui-cell weui-cell_access">
        <view class="weui-cell__bd">健康指标</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
      <navigator url='../Unhealthy/index?id={{userDetails.id}}' class="weui-cell weui-cell_access">
        <view class="weui-cell__bd">非健康状态</view>
        <view class="weui-cell__ft weui-cell__ft_in-access">待完成</view>
      </navigator>
      <navigator url='../Sub/index?id={{userDetails.id}}' class="weui-cell weui-cell_access">
        <view class="weui-cell__bd">亚健康状态</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
      <navigator url='../examination/index?id={{userDetails.id}}' class="weui-cell weui-cell_access">
        <view class="weui-cell__bd">健康体检</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
      <navigator url='../care/index?id={{userDetails.id}}' class="weui-cell weui-cell_access">
        <view class="weui-cell__bd">保健与建议</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </navigator>
    </swiper-item>
  </swiper>
</view>