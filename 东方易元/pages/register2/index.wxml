
<!--注册页面-->
<block>
<view class='dyna'>
  <view class='reg_bt'>欢迎注册</view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__bd">
      <input class="weui-input" name="phone" placeholder="请输入手机号码" bindinput ="phoneInput"/>
    </view>
  </view>
  <view class="weui-cell weui-cell_input weui-cell_vcode">
    <view class="weui-cell__bd" style='width:65%; float:left'>
      <input class="weui-input" name="code" placeholder="请输入验证码" bindinput ="codeInput"/>
    </view>
    <view class="weui-cell__ft" style='width:34%;float:right'>
      <view class="weui-vcode-btn" wx:if="{{!isShow}}" bindtap="getCode">获取验证码</view>
      <view class='weui-vcode-btn' wx:if="{{isShow}}">{{sec}}秒后重新发送</view>
    </view>
  </view>
  <view class="weui-cell weui-cell_input">
    <view class="weui-cell__bd">
      <input class="weui-input" placeholder="请输入推荐人手机号码" bindinput ="tjphoneInput"/>
    </view>
  </view> 
  <button class='reg_btn' bindtap='register'>注册</button>
</view>
</block>
