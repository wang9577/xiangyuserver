.tab-h{
    height: 80rpx;width: 100%; box-sizing: border-box;overflow: hidden;line-height: 80rpx;background: #fff; font-size: 15px; white-space: nowrap;position: fixed;top: 0; left: 0; z-index: 99; border-bottom: 1px solid #eee;}
.tab-item{display: inline-block; color: #999; margin:0 19rpx; text-align: center}
.tab-item.active{color: #333;position: relative;}
.tab-item.active:after{ content: "";display: block;height: 8rpx;width: 50rpx;background: #df4239;position: absolute; bottom: 0;left: 50%; margin-left:-25rpx; border-radius: 16rpx;}
.item-ans{ width: 100%; flex-grow: row no-wrap;justify-content: space-between; padding:20rpx 30rpx;box-sizing: border-box; height: auto; align-items: center;}
.avatar{width: 100%;height: 395rpx;position: relative;}
.avatar .img{width: 100%;height: 100%; border-radius: 10rpx;}
.avatar .doyen{width: 40rpx;height: 40rpx;position: absolute;bottom: -2px;right: 20rpx;}
.expertInfo{font-size: 13px;color: #B0B0B0;line-height: 1.5em; width: 100%; margin-top: 20rpx;}
.expertInfo .name{font-size: 15px;color:#000;margin-bottom: 6px;}
.tab-content{margin-top: 80rpx;}
.scoll-h{height: 100%;}
