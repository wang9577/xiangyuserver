/* pages/dynamics/index.wxss */
.weui-grids {
	border-top: 0rpx solid #d9d9d9;
	border-left: 0rpx solid #d9d9d9;
	overflow: hidden
}
.weui-grid {
	position: relative;
	float: left;
	padding: 20px 10px;
	width: 25%;
	box-sizing: border-box;
	border-right: 0rpx solid #d9d9d9;
	border-bottom: 0rpx solid #d9d9d9
}
.weui-grid__icon {
	display: block;
	width: 45px;
	height: 45px;
	margin: 0 auto
}
.weui-grid__label {
	margin-top: 9px;
	display: block;
	text-align: center;
	color: #333;
	font-size: 14px;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden
}

.warp{ width: 100%; box-sizing: border-box; padding: 0 3%;}
.weui-cell_link {
	color: #586c94;
	font-size: 14px
}
.weui-cell_link:first-child:before {
	display: block
}
.weui-cell01 .weui-cell__bd{ font-size: 15px; color: #333;}
/* CSS Document */
.weui-cells {
	position: relative;
	margin-top: 1.17647059em;
	background-color: #fff;
	line-height: 1.41176471;
	font-size: 16px
}
.weui-cell {
	padding: 10px 15px;
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	align-items: center;
}
.weui-cell01{ border-bottom: 1rpx solid #eee; padding:16px 0;}
.time01{ font-size: 13px;color: #888; position: absolute; bottom: 26rpx;}
.title01,.adders{ float: left; width: 100%; margin-top:0;}
.weui-cell__bd01{ height: 140rpx;}

